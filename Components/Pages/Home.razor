@page "/"

<PageTitle>WhereAreThey - Emergency Tracking</PageTitle>

<div class="container-fluid py-4">
    <div class="row mb-5">
        <div class="col-12 text-center">
            <RadzenText TextStyle="TextStyle.H3" TagName="TagName.H1" Class="rz-color-primary" Style="font-weight: 900; letter-spacing: -1px;">
                WhereAreThey
            </RadzenText>
            <RadzenText TextStyle="TextStyle.Subtitle1">
                Emergency Location Tracking
            </RadzenText>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <!-- ARE THEY HERE? -->
        <div class="col-12">
            <RadzenCard @onclick="@(() => NavigationManager.NavigateTo("/heatmap"))" 
                        Class="rz-shadow-10 rz-border-radius-6 text-center py-5" 
                        Style="cursor: pointer; background-color: var(--rz-info-lighter); border: 2px solid var(--rz-info);">
                <RadzenStack Orientation="Orientation.Vertical" AlignItems="AlignItems.Center" Gap="1.5rem">
                    <RadzenIcon Icon="visibility" Style="font-size: 5rem; color: var(--rz-info);" />
                    <RadzenText TextStyle="TextStyle.H2" Style="font-weight: bold; color: var(--rz-info-darker);">
                        ARE THEY HERE?
                    </RadzenText>
                    <RadzenText TextStyle="TextStyle.H6" Class="rz-color-info-dark">
                        View the Heat Map
                    </RadzenText>
                </RadzenStack>
            </RadzenCard>
        </div>

        <!-- THEY ARE HERE! -->
        <div class="col-12">
            <RadzenCard @onclick="@(() => NavigationManager.NavigateTo("/report"))" 
                        Class="rz-shadow-10 rz-border-radius-6 text-center py-5" 
                        Style="cursor: pointer; background-color: var(--rz-danger-lighter); border: 2px solid var(--rz-danger);">
                <RadzenStack Orientation="Orientation.Vertical" AlignItems="AlignItems.Center" Gap="1.5rem">
                    <RadzenIcon Icon="report_problem" Style="font-size: 5rem; color: var(--rz-danger);" />
                    <RadzenText TextStyle="TextStyle.H2" Style="font-weight: bold; color: var(--rz-danger-darker);">
                        THEY ARE HERE!
                    </RadzenText>
                    <RadzenText TextStyle="TextStyle.H6" Class="rz-color-danger-dark">
                        Report a Location
                    </RadzenText>
                </RadzenStack>
            </RadzenCard>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-6">
            <RadzenButton Text="Alerts" Icon="notifications" Click="@(() => NavigationManager.NavigateTo("/alerts"))" 
                          ButtonStyle="ButtonStyle.Warning" Variant="Variant.Flat" Size="ButtonSize.Large" 
                          Style="width: 100%; font-weight: bold;" />
        </div>
        <div class="col-6">
            <RadzenButton Text="Donate" Icon="volunteer_activism" Click="@(() => NavigationManager.NavigateTo("/donate"))" 
                          ButtonStyle="ButtonStyle.Success" Variant="Variant.Flat" Size="ButtonSize.Large" 
                          Style="width: 100%; font-weight: bold;" />
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12 text-center opacity-75">
            <RadzenText TextStyle="TextStyle.Body2">
                Anonymous. Critical. Real-time.<br />
                <strong>People's lives depend on it.</strong>
            </RadzenText>
        </div>
    </div>
</div>

@code {
    [Inject] private NavigationManager NavigationManager { get; set; } = default!;
}
