@using Radzen.Blazor
@inject DialogService DialogService

<RadzenStack Gap="1.5rem" Class="rz-p-4">
    <RadzenText TextStyle="TextStyle.H5" Style="font-weight: bold; color: var(--rz-primary);">Quick Help Guide</RadzenText>

    <RadzenStack Gap="1rem">
        <RadzenText TextStyle="TextStyle.Subtitle1" Style="font-weight: bold;">Map Interactions</RadzenText>
        
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem">
            <RadzenIcon Icon="touch_app" Style="color: var(--rz-info);" />
            <RadzenText TextStyle="TextStyle.Body2">
                <b>Tap a Heat Area:</b> See a summary of reports and alert zones in that area. <b>Zoom in</b> to see individual pins and tap them for specific details. Overlapping pins are automatically grouped.
            </RadzenText>
        </RadzenStack>

        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem">
            <RadzenIcon Icon="add_location_alt" Style="color: var(--rz-warning);" />
            <RadzenText TextStyle="TextStyle.Body2">
                <b>Tap an Empty Area:</b> Quickly set up an alert for that specific spot.
            </RadzenText>
        </RadzenStack>

        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem">
            <RadzenIcon Icon="report_problem" Style="color: var(--rz-danger);" />
            <RadzenText TextStyle="TextStyle.Body2">
                <b>Long-Press / Right-Click:</b> Report "them" at that exact location.
            </RadzenText>
        </RadzenStack>

        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem">
            <RadzenIcon Icon="notifications_active" Style="color: #e65100;" />
            <RadzenText TextStyle="TextStyle.Body2">
                <b>Orange Pins:</b> Your active alerts. Tap to see details or delete the alert zone.
            </RadzenText>
        </RadzenStack>
    </RadzenStack>

    <hr style="border: none; border-top: 1px solid var(--rz-divider); margin: 1rem 0;" />

    <RadzenStack Gap="1rem">
        <RadzenText TextStyle="TextStyle.Subtitle1" Style="font-weight: bold;">Toolbar Actions</RadzenText>
        
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem">
            <RadzenBadge Text="REPORT" BadgeStyle="BadgeStyle.Danger" />
            <RadzenText TextStyle="TextStyle.Body2">Submit a report for your <b>current location</b>.</RadzenText>
        </RadzenStack>

        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem">
            <RadzenIcon Icon="notifications" Style="color: var(--rz-warning);" />
            <RadzenText TextStyle="TextStyle.Body2">Manage your radius-based email alerts.</RadzenText>
        </RadzenStack>

        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem">
            <RadzenIcon Icon="settings" Style="color: var(--rz-base);" />
            <RadzenText TextStyle="TextStyle.Body2">Change time range filters and manage your Profile ID.</RadzenText>
        </RadzenStack>

        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem">
            <RadzenIcon Icon="sync" Style="color: var(--rz-success);" />
            <RadzenText TextStyle="TextStyle.Body2">
                <b>Sync Devices:</b> Copy your Profile ID from Settings to use the same profile on multiple devices.
            </RadzenText>
        </RadzenStack>
    </RadzenStack>

    <RadzenText TextStyle="TextStyle.Caption" Class="opacity-75 mt-2">
        AreTheyHere is a privacy-first, anonymous tool. People's lives depend on accurate and timely reporting.
    </RadzenText>

    <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End" Class="mt-2">
        <RadzenButton Text="GOT IT" Click="@(() => DialogService.Close())" ButtonStyle="ButtonStyle.Primary" />
    </RadzenStack>
</RadzenStack>
