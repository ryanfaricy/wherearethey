<RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem">
    @if (!string.IsNullOrEmpty(BadgeText))
    {
        <RadzenBadge Text="@BadgeText" BadgeStyle="@BadgeStyle" />
    }
    else
    {
        <RadzenIcon Icon="@Icon" @attributes="IconAttributes" />
    }
    <RadzenText TextStyle="TextStyle.Body2">
        @if (!string.IsNullOrEmpty(Title))
        {
            <b>@Title:</b> @(" ")
        }
        @Description
        @ChildContent
    </RadzenText>
</RadzenStack>

@code {
    [Parameter] public string Icon { get; set; } = "";
    [Parameter] public string IconColor { get; set; } = "var(--rz-primary)";
    [Parameter] public string? IconSize { get; set; }
    [Parameter] public string? Title { get; set; }
    [Parameter] public string Description { get; set; } = "";
    [Parameter] public string? BadgeText { get; set; }
    [Parameter] public BadgeStyle BadgeStyle { get; set; } = BadgeStyle.Primary;
    [Parameter] public RenderFragment? ChildContent { get; set; }

    private Dictionary<string, object> IconAttributes => new() 
    { 
        { "style", $"color: {IconColor}; font-size: {IconSize ?? "1.5rem"};" },
    };
}
