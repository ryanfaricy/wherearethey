@using System.Globalization
@using WhereAreThey.Components.Pages
@using WhereAreThey.Models
@using WhereAreThey.Services
@using Microsoft.Extensions.Localization
@inject NavigationManager NavigationManager
@inject DialogService DialogService
@inject IJSRuntime JSRuntime
@inject LocationService LocationService
@inject SettingsService SettingsService
@inject IStringLocalizer<App> L

<RadzenPanelMenu Style="height: 100%">
    <RadzenPanelMenuItem Text="@L["ARE THEY HERE?"]" Icon="visibility" Path="/" />
    <RadzenPanelMenuItem Text="@L["THEY ARE HERE!"]" Icon="report_problem" Click="@OnReportClick" />
    <RadzenPanelMenuItem Text="@L["Alerts"]" Icon="notifications" Click="@OnAlertsClick" />
    @if (systemSettings.DonationsEnabled)
    {
        <RadzenPanelMenuItem Text="@L["Donate"]" Icon="volunteer_activism" Click="@OnDonateClick" />
    }
</RadzenPanelMenu>

@code {
    private string? userIdentifier;
    private SystemSettings systemSettings = new();

    protected override async Task OnInitializedAsync()
    {
        systemSettings = await SettingsService.GetSettingsAsync();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            userIdentifier = await JSRuntime.InvokeAsync<string>("getUserIdentifier");
        }
    }

    private async Task OnReportClick()
    {
        try
        {
            var position = await JSRuntime.InvokeAsync<GeolocationPosition>("getLocation");
            var report = new LocationReport
            {
                Latitude = position.Coords.Latitude,
                Longitude = position.Coords.Longitude,
                ReporterIdentifier = userIdentifier,
                ReporterLatitude = position.Coords.Latitude,
                ReporterLongitude = position.Coords.Longitude
            };
            
            await DialogService.OpenAsync<ReportDialog>("REPORT LOCATION",
                new Dictionary<string, object> { { "report", report } },
                new DialogOptions { Width = "500px" });
        }
        catch (Exception)
        {
            // If location fails, still open dialog but with empty coordinates
            await DialogService.OpenAsync<ReportDialog>("REPORT LOCATION",
                new Dictionary<string, object> { { "report", new LocationReport { ReporterIdentifier = userIdentifier } } },
                new DialogOptions { Width = "500px" });
        }
    }

    private async Task OnAlertsClick()
    {
        var parameters = new Dictionary<string, object>();
        try
        {
            var mapState = await JSRuntime.InvokeAsync<MapState>("getMapState");
            if (mapState != null)
            {
                parameters.Add("InitialLat", mapState.Lat);
                parameters.Add("InitialLng", mapState.Lng);
                parameters.Add("InitialRadius", Math.Round(mapState.RadiusKm, 1));
            }
        }
        catch (Exception)
        {
            // Ignore if map state cannot be retrieved
        }

        var result = await DialogService.OpenAsync<AlertsDialog>("ALERTS", parameters, new DialogOptions { Width = "500px" });

        if (result is Alert alert)
        {
            NavigationManager.NavigateTo($"/?alertId={alert.ExternalId}", forceLoad: true);
        }
    }

    private async Task OnDonateClick()
    {
        await DialogService.OpenAsync<DonateDialog>("DONATE", null, new DialogOptions { Width = "500px" });
    }

    public class GeolocationPosition
    {
        public GeolocationCoordinates Coords { get; set; } = new();
    }

    public class GeolocationCoordinates
    {
        public double Latitude { get; set; }
        public double Longitude { get; set; }
    }
}
